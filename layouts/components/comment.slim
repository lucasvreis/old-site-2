.comment [id=@comment[:id] original=@comment.compiled_content(snapshot: :raw)]
  .header
    svg data-jdenticon-value=@comment[:name]
    .info
      title = @comment[:name]
      aside = @comment[:time].strftime('%a %d %b %Y')
  == @comment.compiled_content
  .end
    aside
      - if @nesting < 3
        a [href="#novo-comentario" onclick="answerComment('#{@comment[:id]}');"] Responder
      a href="#novo-comentario" Editar
      a href="#novo-comentario" Apagar
  - if @nesting < 3 && @tree[@comment[:id]]
    - for comm in @tree[@comment[:id]]
      == render "/components/comment.slim", comment: comm, tree: @tree, nesting: @nesting + 1
